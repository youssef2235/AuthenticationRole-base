@model ProductDto


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2>إنشاء منتج جديد</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Product">
                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-sm-4 col-form-label">الاسم</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Brand" class="col-sm-4 col-form-label">العلامة التجارية</label>
                            <div class="col-sm-8">
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Category" class="col-sm-4 col-form-label">الفئة</label>
                            <div class="col-sm-8">
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- اختر الفئة --</option>
                                    <option value="مبيدات">مبيدات</option>  
                                    <option value="أسمدة">أسمدة</option>
                                    <option value="منظمات نمو">منظمات نمو</option>
                                    <option value="محفزات حيوية">محفزات حيوية</option>
                                    <option value="مطهرات زراعية">مطهرات زراعية</option>
                                    <option value="معقمات تربة">معقمات تربة</option>
                                    <option value="مواد لاصقة وناشرة">مواد لاصقة وناشرة</option>
                                    <option value="زيوت معدنية">زيوت معدنية</option>
									<option value="أخرى">أخرى</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Price" class="col-sm-4 col-form-label">السعر</label>
                            <div class="col-sm-8">
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Quantity" class="col-sm-4 col-form-label">الكمية</label>
                            <div class="col-sm-8">
                                <input asp-for="Quantity" class="form-control" type="number" min="0" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Description" class="col-sm-4 col-form-label">وصف المنتج</label>
                            <div class="col-sm-8">
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3 row">
                            <label asp-for="Proberties" class="col-sm-4 col-form-label">خصائص المنتج</label>
                            <div class="col-sm-8">
                                <textarea asp-for="Proberties" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Proberties" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="mb-3 row">
                            <label asp-for="Form" class="col-sm-4 col-form-label">مكونات وعناصر المنتج</label>
                            <div class="col-sm-8">
                                <textarea asp-for="Form" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Form" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="binfet" class="col-sm-4 col-form-label">فوائد المنتج</label>
                            <div class="col-sm-8">
                                <textarea asp-for="binfet" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="binfet" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="usage" class="col-sm-4 col-form-label">ارشادات الاستخدام</label>
                            <div class="col-sm-8">
                                <textarea asp-for="usage" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="usage" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="mb-3 row">
                            <label asp-for="productdata" class="col-sm-4 col-form-label">بيانات المنتج</label>
                            <div class="col-sm-8">
                                <textarea asp-for="productdata" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="productdata" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="SeoTitle" class="col-sm-4 col-form-label">الوسوم</label>
                            <div class="col-sm-8">
                                <textarea asp-for="SeoTitle" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="SeoTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ImageFile" class="col-sm-4 col-form-label">صورة المنتج</label>
                            <div class="col-sm-8">
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary w-100">إنشاء</button>
                            </div>
                            <div class="col-sm-4">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary w-100">الرجوع</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

