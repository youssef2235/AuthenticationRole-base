        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h2 class="text-center mb-5">تعديل  منتج</h2>

                <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Product">

                    <div class="row mb-3">
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الاسم</label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">العلامة التجارية</label>
                        <div class="col-sm-8">
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الفئة</label>
                        <div class="col-sm-8">
                            <select asp-for="Category" class="form-control">
                                <option value="نباتات">نباتات</option>
                                <option value="أشجار مثمرة"> أشجار مثمرة</option>
                                <option value="امراض زراعية">امراض زراعية</option>
                                <option value="سماد عضوي">سماد عضوي</option>
                                <option value="ادويه حشرية">ادويه حشرية</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">السعر</label>
                        <div class="col-sm-8">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الكمية</label>
                        <div class="col-sm-8">
                            <input asp-for="Pages" class="form-control" />
                            <span asp-validation-for="Pages" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">وصف المنتج</label>
                        <div class="col-sm-8">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <div class="col-sm-8">
                            <img src="~/Products/@ViewData["ImageFileName"]" width="100" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">صورة المنتج</label>
                        <div class="col-sm-8">
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">وقت الاضافة في المخزون</label>
                        <div class="col-sm-8">
                            <input class="form-control-plaintext" readonly value="@ViewData["DateTime"]" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">حفظ التعديل</button>
                        </div>

                        <div class="col-sm-4 d-grid">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">الرجوع</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

<pre>


</pre>

