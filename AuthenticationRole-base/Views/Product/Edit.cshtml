    <div class="main-content">
        <h2 class="text-center mb-5">List Of Products</h2>

        <div class="row mb-5">
            @if (User.IsInRole("admin"))
            {
                <div class="col">
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">New Product</a>
                </div>
            }
            <pre>

    </pre>
        </div>

        <pre>


</pre>

        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h2 class="text-center mb-5">تعديل  منتج</h2>

                <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Product">

                    <div class="row mb-3">
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الاسم</label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">العلامة التجارية</label>
                        <div class="col-sm-8">
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الفئة</label>
                        <div class="col-sm-8">
                            <select asp-for="Category" class="form-control">
                            <option value="مبيدات">مبيدات</option>
                            <option value="أسمدة">أسمدة</option>
                            <option value="منظمات نمو">منظمات نمو</option>
                            <option value="محفزات حيوية">محفزات حيوية</option>
                            <option value="مطهرات زراعية">مطهرات زراعية</option>
                            <option value="معقمات تربة">معقمات تربة</option>
                            <option value="مواد لاصقة وناشرة">مواد لاصقة وناشرة</option>
                            <option value="زيوت معدنية">زيوت معدنية</option>
							<option value="أخرى">أخرى</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">السعر</label>
                        <div class="col-sm-8">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">الكمية</label>
                        <div class="col-sm-8">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">وصف المنتج</label>
                        <div class="col-sm-8">
                        <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                <div class="mb-3 row">
                    <label asp-for="Proberties" class="col-sm-4 col-form-label">خصائص المنتج</label>
                    <div class="col-sm-8">
                        <textarea asp-for="Proberties" class="form-control" ></textarea>
                        <span asp-validation-for="Proberties" class="text-danger"></span>
                    </div>
                </div>


                <div class="mb-3 row">
                    <label asp-for="Form" class="col-sm-4 col-form-label">مكونات وعناصر المنتج</label>
                    <div class="col-sm-8">
                        <textarea asp-for="Form" class="form-control" ></textarea>
                        <span asp-validation-for="Form" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="binfet" class="col-sm-4 col-form-label">فوائد المنتج</label>
                    <div class="col-sm-8">
                        <textarea asp-for="binfet" class="form-control" ></textarea>
                        <span asp-validation-for="binfet" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="usage" class="col-sm-4 col-form-label">ارشادات الاستخدام</label>
                    <div class="col-sm-8">
                        <textarea asp-for="usage" class="form-control" ></textarea>
                        <span asp-validation-for="usage" class="text-danger"></span>
                    </div>
                </div>


                <div class="mb-3 row">
                    <label asp-for="productdata" class="col-sm-4 col-form-label">بيانات المنتج</label>
                    <div class="col-sm-8">
                        <textarea asp-for="productdata" class="form-control" ></textarea>
                        <span asp-validation-for="productdata" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="SeoTitle" class="col-sm-4 col-form-label">الوسوم</label>
                    <div class="col-sm-8">
                        <textarea asp-for="SeoTitle" class="form-control" ></textarea>
                        <span asp-validation-for="SeoTitle" class="text-danger"></span>
                    </div>
                </div>

                    <div class="row mb-3">
                        <div class="col-sm-8">
                            <img src="~/Products/@ViewData["ImageFileName"]" width="100" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">صورة المنتج</label>
                        <div class="col-sm-8">
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">وقت الاضافة في المخزون</label>
                        <div class="col-sm-8">
                            <input class="form-control-plaintext" readonly value="@ViewData["DateTime"]" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">حفظ التعديل</button>
                        </div>

                        <div class="col-sm-4 d-grid">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">الرجوع</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

<pre>


</pre>

</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    













