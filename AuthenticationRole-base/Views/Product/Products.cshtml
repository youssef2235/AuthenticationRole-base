@model List<AuthenticationRole_base.Models.Product>
@{
    ViewData["Title"] = "منتجات بلو جرين";
    var search = Context.Request.Query["search"].ToString();
    var filteredProducts = string.IsNullOrWhiteSpace(search)
        ? Model
        : Model.Where(p => p.Name.Contains(search, StringComparison.OrdinalIgnoreCase)
                        || p.Description.Contains(search, StringComparison.OrdinalIgnoreCase)).ToList();
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Products.css" />
}

<div class="container fade-in">
    <div class="page-header">
        <h1>منتجات بلو جرين</h1>
    </div>

    <form method="get" class="search-bar mb-4">
        <div class="input-group">
            <input type="text" name="search" value="@search" class="form-control form-control-lg" placeholder="ابحث عن منتج...">
            <button class="btn btn-success btn-lg" type="submit">بحث</button>
        </div>
    </form>

    @if (filteredProducts.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var product in filteredProducts)
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <div class="product-img-container">
                            <img src="~/products/@product.ImageFileName" alt="@product.Name">
                        </div>
                        <div class="card-body text-center d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <a href="/Product/Details/@product.Id" class="btn btn-details mt-auto px-4">تفاصيل</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            لا توجد منتجات تطابق كلمة البحث.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
