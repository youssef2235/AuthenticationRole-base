@model ErrorViewModel
@{
    ViewData["Title"] = "قيد العمل";
}
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment

<div class="text-center mt-5">
    <h1 class="text-primary">قيد العمل</h1>
    <h2 class="mb-4">يعمل مهندسينا على تطوير وتحديث هذه الصفحة الآن</h2>

    <div class="mt-4">
        <!-- Development/Programming Icon using SVG -->
        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
            <line x1="12" y1="2" x2="12" y2="22"></line>
        </svg>
    </div>

    <p class="text-muted mt-4">
        نشكركم على تفهمكم، سنعود قريباً.
    </p>
</div>

@if (Model.ShowRequestId && Environment.IsDevelopment())
{
    <div class="mt-5 text-muted small">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </div>
}
