@model Lab

@{
    ViewData["Title"] = "Create";
}

    @section Styles {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <style>
            body {
                background-color: #f4f6f9;
                font-family: 'Cairo', sans-serif;
            }
            .form-section {
                background-color: white;
                border-radius: 10px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                margin-bottom: 20px;
                padding: 25px;
                border: 1px solid #e1e6eb;
                transition: all 0.3s ease;
            }
            .form-section:hover {
                box-shadow: 0 6px 12px rgba(0,0,0,0.15);
                transform: translateY(-5px);
            }
            .form-section h4 {
                color: #2c3e50;
                border-bottom: 2px solid #3498db;
                padding-bottom: 10px;
                margin-bottom: 20px;
            }
            .form-label {
                color: #34495e;
                font-weight: bold;
            }
            .form-control {
                border-color: #bdc3c7;
                transition: all 0.3s ease;
            }
            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52,152,219,0.25);
            }
            .btn-primary {
                background-color: #2980b9;
                border-color: #2980b9;
                transition: all 0.3s ease;
            }
            .btn-primary:hover {
                background-color: #3498db;
                border-color: #3498db;
            }
            .btn-secondary {
                background-color: #95a5a6;
                border-color: #95a5a6;
            }
            .text-danger {
                color: #e74c3c !important;
            }
        </style>
    }
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h1 class="mb-0">إنشاء تقرير جديد</h1>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-info-circle me-2"></i>المعلومات الأساسية</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="ReceivedDate" class="form-label">تاريخ التقديم</label>
                                            <input asp-for="ReceivedDate" class="form-control" type="date" required />
                                            <span asp-validation-for="ReceivedDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ReportDate" class="form-label">تاريخ التقرير</label>
                                            <input asp-for="ReportDate" class="form-control" type="date" required />
                                            <span asp-validation-for="ReportDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ClientName" class="form-label">اسم الشركة</label>
                                            <input asp-for="ClientName" class="form-control" required />
                                            <span asp-validation-for="ClientName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Location" class="form-label">الموقع</label>
                                            <input asp-for="Location" class="form-control" required />
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-flask me-2"></i>تفاصيل العينة</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="SampleType" class="form-label">نوع العينة</label>
                                            <input asp-for="SampleType" class="form-control" required />
                                            <span asp-validation-for="SampleType" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="pH" class="form-label">مستوى الأس الهيدروجيني (pH)</label>
                                            <input asp-for="pH" class="form-control" type="number" step="0.1" required />
                                            <span asp-validation-for="pH" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ElectricalConductivity" class="form-label">التوصيل الكهربائي</label>
                                            <input asp-for="ElectricalConductivity" class="form-control" type="number" step="0.01" required />
                                            <span asp-validation-for="ElectricalConductivity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-bar-chart me-2"></i>التحليل الغذائي</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="OrganicMatter" class="form-label">المادة العضوية (%)</label>
                                            <input asp-for="OrganicMatter" class="form-control" type="number" step="0.1" />
                                            <span asp-validation-for="OrganicMatter" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="TotalNitrogen" class="form-label">النيتروجين</label>
                                            <input asp-for="TotalNitrogen" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="TotalNitrogen" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="AvailablePhosphorus" class="form-label">الفوسفور</label>
                                            <input asp-for="AvailablePhosphorus" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="AvailablePhosphorus" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ExchangePotassium" class="form-label">البوتاسيوم</label>
                                            <input asp-for="ExchangePotassium" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="ExchangePotassium" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-puzzle me-2"></i>التركيب المعدني</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="Calcium" class="form-label">الكالسيوم</label>
                                            <input asp-for="Calcium" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Calcium" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Magnesium" class="form-label">المغنيسيوم</label>
                                            <input asp-for="Magnesium" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Magnesium" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Iron" class="form-label">الحديد</label>
                                            <input asp-for="Iron" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Iron" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Zinc" class="form-label">الزنك</label>
                                            <input asp-for="Zinc" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Zinc" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-layer-half me-2"></i>تركيب التربة</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="SandPercentage" class="form-label">نسبة الرمل (%)</label>
                                            <input asp-for="SandPercentage" class="form-control" type="number" step="0.1" />
                                            <span asp-validation-for="SandPercentage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ClayPercentage" class="form-label">نسبة الطين (%)</label>
                                            <input asp-for="ClayPercentage" class="form-control" type="number" step="0.1" />
                                            <span asp-validation-for="ClayPercentage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="SiltPercentage" class="form-label">نسبة الغرين (%)</label>
                                            <input asp-for="SiltPercentage" class="form-control" type="number" step="0.1" />
                                            <span asp-validation-for="SiltPercentage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ClayPercentage" class="form-label">القوام</label>
                                            <input asp-for="ClayPercentage" class="form-control" />
                                            <span asp-validation-for="ClayPercentage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-grid me-2"></i>خصائص إضافية</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="SiltPercentage" class="form-label">الكثافة الظاهرية</label>
                                            <input asp-for="SiltPercentage" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="SiltPercentage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="ApparentDensity" class="form-label">الكثافة الحقيقية</label>
                                            <input asp-for="ApparentDensity" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="ApparentDensity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-section">
                                        <h4><i class="bi bi-clipboard-check me-2"></i>التقييم والتوصيات</h4>
                                        <div class="form-group mb-3">
                                            <label asp-for="Problems" class="form-label">المشاكل المحددة</label>
                                            <textarea asp-for="Problems" class="form-control" rows="4" placeholder="اكتب المشاكل المحددة هنا"></textarea>
                                            <span asp-validation-for="Problems" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Recommendations" class="form-label">التوصيات</label>
                                            <textarea asp-for="Recommendations" class="form-control" rows="4" placeholder="اكتب التوصيات هنا"></textarea>
                                            <span asp-validation-for="Recommendations" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg ms-3"><i class="bi bi-save me-2"></i>إنشاء التقرير</button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-arrow-return-right me-2"></i>العودة للقائمة</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>


