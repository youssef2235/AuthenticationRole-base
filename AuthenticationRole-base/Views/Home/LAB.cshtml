@{
    ViewData["Title"] = "المعمل الزراعي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- إضافة CSS لتحديث الألوان والمظهر -->
<style>
    :root {
        --primary-color: #2e7d32; /* أخضر غامق */
        --secondary-color: #81c784; /* أخضر متوسط */
        --light-color: #e8f5e9; /* أخضر فاتح */
        --gradient-bg: linear-gradient(135deg, #e8f5e9, #c8e6c9, #a5d6a7); /* تدرج أخضر فاتح */
        --dark-text: #212121;
        --light-text: #ffffff;
        --border-radius: 10px;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
    }

    body {
        font-family: 'Tajawal', sans-serif;
        color: var(--dark-text);
        background-color: #fafafa;
    }

    .bg-gradient-green {
        background: var(--gradient-bg);
    }

    .text-primary-custom {
        color: var(--primary-color);
    }

    .border-custom {
        border-color: var(--secondary-color) !important;
    }

    .welcome-section {
        background: var(--gradient-bg);
        border-radius: var(--border-radius);
        padding: 3rem 1.5rem;
        margin-bottom: 3rem;
        box-shadow: var(--shadow);
    }

    .card {
        border-radius: var(--border-radius);
        border: none;
        box-shadow: var(--shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .btn-primary, .btn-success {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        border-radius: 25px;
        padding: 8px 20px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover, .btn-success:hover {
        background-color: #1b5e20;
        border-color: #1b5e20;
        transform: translateY(-2px);
    }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
        border-radius: 25px;
        padding: 8px 20px;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-2px);
    }

    .display-4, .h1, h1 {
        color: var(--primary-color);
        font-weight: 700;
    }

    h2, h3, h4, h5, h6 {
        color: var(--primary-color);
    }

    .section-divider {
        height: 2px;
        background: var(--gradient-bg);
        width: 100%;
        margin: 2rem 0;
    }

    .list-group-item {
        border-left: 4px solid var(--secondary-color);
        margin-bottom: 5px;
        border-radius: 0 var(--border-radius) var(--border-radius) 0;
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: var(--light-color);
        transform: translateX(5px);
    }

    .accordion-button:not(.collapsed) {
        background-color: var(--light-color);
        color: var(--primary-color);
        box-shadow: none;
    }

    .accordion-button:focus {
        box-shadow: 0 0 0 0.25rem rgba(46, 125, 50, 0.25);
    }

    .accordion-item {
        border-radius: var(--border-radius);
        overflow: hidden;
        margin-bottom: 10px;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .step-card {
        position: relative;
        padding-top: 25px;
    }

    .step-number {
        position: absolute;
        top: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 40px;
        background-color: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.25rem;
    }

    .img-thumbnail {
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
    }

    .contact-info-card {
        border-left: 5px solid var(--primary-color);
    }

    .social-icon {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin-right: 10px;
        transition: transform 0.3s ease;
    }

    .social-icon:hover {
        transform: scale(1.2);
    }
</style>

