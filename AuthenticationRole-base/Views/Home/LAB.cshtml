<script>
    document.addEventListener('DOMContentLoaded', function () {
        // تهيئة مكونات Bootstrap إذا لزم الأمر

        // إضافة تأثير حركي عند التمرير للعناصر
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.card, .welcome-section, .section-divider');

            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight;

                if (elementPosition < screenPosition - 100) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };

        // تطبيق CSS للعناصر قبل التمرير
        const elements = document.querySelectorAll('.card, .welcome-section, .section-divider');
        elements.forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(20px)';
            element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        });

        // تفعيل حدث التمرير
        window.addEventListener('scroll', animateOnScroll);

        // تشغيل الحركة للعناصر المرئية عند تحميل الصفحة
        animateOnScroll();
    });
</script>