    <script>
        $(document).ready(function () {
            // وظيفة تصفية الأسئلة حسب القسم
            $('.faq-filter').click(function () {
                var target = $(this).data('target');
                $('.faq-filter').removeClass('active');
                $(this).addClass('active');

                if (target === 'all') {
                    $('.faq-section').show();
                } else {
                    $('.faq-section').hide();
                    $('.faq-section[data-section="' + target + '"]').show();
                }
            });

            // وظيفة البحث في الأسئلة
            $('#faq-search').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();

                $('.accordion-item').each(function () {
                    var question = $(this).find('.accordion-button').text().toLowerCase();
                    var answer = $(this).find('.accordion-body').text().toLowerCase();

                    if (question.indexOf(searchText) > -1 || answer.indexOf(searchText) > -1) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
