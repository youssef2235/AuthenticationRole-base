    <script>
        // إضافة تأثيرات التمرير للعناصر
        document.addEventListener('DOMContentLoaded', function() {
            // تحريك أرقام الإحصائيات
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(statNumber => {
                const finalNumber = statNumber.innerText;
                statNumber.innerText = '0';

                setTimeout(() => {
                    const targetNum = parseInt(finalNumber.replace(/\D/g, ''));
                    let count = 0;
                    const duration = 2000;
                    const interval = Math.floor(duration / targetNum);

                    const counter = setInterval(() => {
                        count += Math.ceil(targetNum / (duration / 50));

                        if (count >= targetNum) {
                            statNumber.innerText = finalNumber;
                            clearInterval(counter);
                        } else {
                            statNumber.innerText = count + '+';
                        }
                    }, interval);
                }, 500);
            });

            // تأثير ظهور العناصر عند التمرير
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.section').forEach(section => {
                observer.observe(section);
            });

            // تحريك نقاط الخريطة بشكل عشوائي
            const mapPoints = document.querySelectorAll('.map-point');
            mapPoints.forEach(point => {
                setInterval(() => {
                    const randomX = Math.random() * 10 - 5;
                    const randomY = Math.random() * 10 - 5;
                    point.style.transform = `translate(calc(-50% + ${randomX}px), calc(-50% + ${randomY}px))`;
                }, 3000);
            });
        });
    </script>
