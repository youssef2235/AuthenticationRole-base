@model BlueGreenEG.ViewModels.ArticleDetails
@{
    ViewData["Title"] = Model.Articles.Title;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fa;
    }

    .article-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
        direction: rtl;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .article-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .article-title {
        font-size: 2.5rem;
        color: #1f2937;
        margin-bottom: 1rem;
        font-weight: bold;
    }

    .article-meta {
        display: flex;
        justify-content: center;
        gap: 2rem;
        color: #6b7280;
        margin-bottom: 1rem;
    }

    .article-meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .article-category {
        display: inline-block;
        background-color: #16a34a;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
    }

    .article-featured-image {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 2rem;
        transition: transform 0.3s ease-in-out;
    }

        .article-featured-image:hover {
            transform: scale(1.05);
        }

    .article-section {
        margin-bottom: 2rem;
        background-color: #f9fafb;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    .section-title {
        font-size: 1.75rem;
        color: #1f2937;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .section-content {
        font-size: 1.125rem;
        line-height: 1.8;
        color: #374151;
    }

    .back-to-articles {
        display: inline-block;
        margin-top: 2rem;
        color: #16a34a;
        font-weight: 600;
        text-decoration: none;
        font-size: 1.125rem;
        transition: color 0.3s;
    }

        .back-to-articles:hover {
            text-decoration: underline;
            color: #107e36;
        }

    .author-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 2rem 0;
        padding: 1rem;
        background-color: #f9fafb;
        border-radius: 8px;
    }

    .author-image {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
    }

    .author-details {
        flex: 1;
    }

    .author-name {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.25rem;
    }

    .author-job {
        color: #6b7280;
        font-size: 0.875rem;
    }
</style>

<div class="article-details">
    <div class="article-header">
        <h1 class="article-title">@Model.Articles.Title</h1>
        <div class="article-meta">
            <div class="article-meta-item">
                <i class="bi bi-calendar"></i>
                <span>@Model.Articles.CreatedAt.ToString("d MMMM yyyy")</span>
            </div>
            <div class="article-meta-item">
                <i class="bi bi-person"></i>
                <span>@Model.Articles.Writer</span>
            </div>
        </div>
        <span class="article-category">@Model.Articles.Category</span>
    </div>

    <img src="/Articles/@Model.Articles.ImageFileName" alt="@Model.Articles.Title" class="article-featured-image">

   @if(Model.Articles.Content != null){
        <div class="article-section">
            <h2 class="section-title">مقدمة المقال</h2>
            <div class="section-content">
                @Html.Raw(Model.Articles.Content)
            </div>
        </div>
   }
   @if(Model.Articles.Content2 != null)
   {
        <!-- جزء المقال الثاني -->
        <div class="article-section">
            <h2 class="section-title">الفصل الأول</h2>
            <div class="section-content">
                @Html.Raw(Model.Articles.Content2)
            </div>
        </div>
   }

   @if(Model.Articles.Content3 != null)
   {
        <!-- جزء المقال الثالث -->
        <div class="article-section">
            <h2 class="section-title">الفصل الثاني</h2>
            <div class="section-content">
                @Html.Raw(Model.Articles.Content3)
            </div>
        </div>
   }
   @if(Model.Articles.Content != null)
   {
        <!-- جزء المقال الرابع -->
        <div class="article-section">
            <h2 class="section-title">الفصل الثالث</h2>
            <div class="section-content">
                @Html.Raw(Model.Articles.Content4)
            </div>
        </div>
   }

    <a asp-controller="Article" asp-action="Articles" class="back-to-articles">
        <i class="bi bi-arrow-right"></i> العودة إلى المقالات
    </a>
</div>
