@model ProductDto


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2> إضافة مقال جديد</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Product">
                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-sm-4 col-form-label">عنوان المقال</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Brand" class="col-sm-4 col-form-label">الكاتب</label>
                            <div class="col-sm-8">
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Brand" class="col-sm-4 col-form-label">وظيفة الكاتب</label>
                            <div class="col-sm-8">
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Category" class="col-sm-4 col-form-label">الفئة</label>
                            <div class="col-sm-8">
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- اختر الفئة --</option>
                                    <option value="نباتات">نباتات</option>
                                    <option value="أشجار مثمرة">أشجار مثمرة</option>
                                    <option value="امراض زراعية">امراض زراعية</option>
                                    <option value="سماد عضوي">سماد عضوي</option>
                                    <option value="ادويه حشرية">ادويه حشرية</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Description" class="col-sm-4 col-form-label">SEO كلمات</label>
                            <div class="col-sm-8">
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Description" class="col-sm-4 col-form-label">المقال</label>
                            <div class="col-sm-8">
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ImageFile" class="col-sm-4 col-form-label">صورة المقال</label>
                            <div class="col-sm-8">
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary w-100">إنشاء</button>
                            </div>
                            <div class="col-sm-4">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary w-100">الرجوع</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

