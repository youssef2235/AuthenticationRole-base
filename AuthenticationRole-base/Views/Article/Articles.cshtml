@model List<AuthenticationRole_base.Models.Article>
@{
    ViewData["Title"] = "Articles";
}



<style>
    .articles {
        padding: 5rem 5%;
        text-align: center;
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .article-card {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        text-decoration: none;
        color: #333;
        display: block;
    }

        .article-card:hover {
            transform: translateY(-10px);
        }

    .article-img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .article-info {
        padding: 1.5rem;
        text-align: right;
    }

        .article-info h3 {
            color: #333;
            margin-bottom: 0.5rem;
        }

    .article-meta {
        display: flex;
        justify-content: space-between;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.8rem;
    }

    .read-more {
        color: #16a34a;
        font-weight: 600;
        margin-top: 0.8rem;
        display: inline-block;
    }

</style>

<!-- Articles Section -->
<section class="articles" id="articles">
    <h2 class="section-title">المقالات الزراعية المفضلة</h2>
    <div class="articles-grid">
        @if (Model != null && Model.Any())
        {
            @foreach (var article in Model)
            {
                <a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id" class="article-card">
                    <img src="/Articles/@article.ImageFileName" alt="@article.Title" class="article-img">
                    <div class="article-info">
                        <div class="article-meta">
                            <span>@article.CreatedAt.ToString("d MMMM yyyy")</span>
                            <span>الكاتب: @article.Writer</span>
                        </div>
                        <h3>@article.Title</h3>
                        <p>@(article.Content.Length > 150 ? article.Content.Substring(0, 150) + "..." : article.Content)</p>
                        <span class="read-more">اقرأ المزيد ←</span>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="no-articles">
                <p>لا توجد مقالات حاليًا</p>
            </div>
        }
    </div>
</section>

