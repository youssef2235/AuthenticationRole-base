<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Arial', sans-serif;
    }

    body {
        background-color: #f5f5f5;
        padding: 0;
    }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    .card-icon {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 24px;
        color: #666;
    }

    .card-title {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    .card-value {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .card-info {
        font-size: 14px;
        color: #888;
        display: flex;
        align-items: center;
    }

    .card-trend-up {
        color: #4CAF50;
        margin-left: 5px;
    }

    .card-trend-down {
        color: #F44336;
        margin-left: 5px;
    }

    .products-card {
        border-top: 4px solid #2196F3;
    }

    .articles-card {
        border-top: 4px solid #FF9800;
    }

    .views-card {
        border-top: 4px solid #9C27B0;
    }

    .users-card {
        border-top: 4px solid #4CAF50;
    }

    .sales-card {
        border-top: 4px solid #F44336;
    }

    .comments-card {
        border-top: 4px solid #795548;
    }

    .card-actions {
        margin-top: 15px;
        text-align: left;
    }

    .action-button {
        background-color: #f5f5f5;
        border: none;
        border-radius: 5px;
        padding: 8px 12px;
        color: #555;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s;
    }

        .action-button:hover {
            background-color: #e0e0e0;
        }

    .progress-container {
        margin-top: 15px;
        height: 6px;
        background-color: #eee;
        border-radius: 3px;
    }

    .progress-bar {
        height: 100%;
        border-radius: 3px;
    }
</style>
